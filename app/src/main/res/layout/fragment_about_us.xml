<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AboutUsFragment">

    <ImageView
        android:id="@+id/icon_aboutus"
        android:layout_width="175dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/aboutus_icon" />

    <TextView
        android:id="@+id/icon_aboutus_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/icon_aboutus"
        android:layout_marginTop="20dp"
        android:text="@string/menu_about"
        android:textColor="@color/colorTextWhite"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"/>

    <TextView
        android:id="@+id/icon_podcasts_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/icon_aboutus_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#76706c"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"/>



    <ImageView
        android:layout_width="155dp"
        android:layout_height="107dp"
        android:src="@drawable/logo_conquistadores_en_blanco_modificado"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>