<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".com.jbarseg.conquistadores.com.jbarseg.conquistadores.podcast.PodcastsActivity">

    <TextView
        android:id="@+id/podcasts_title_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_podcasts"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorTextWhite"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/podcasts_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/podcasts_title_fragment"
        android:layout_marginTop="20dp"/>

</RelativeLayout>