<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".com.jbarseg.conquistadores.com.jbarseg.conquistadores.verses.HausVersesActivity">

    <ImageView
        android:id="@+id/haus_logo"
        android:layout_width="349dp"
        android:layout_height="145dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/haus_fondo_negro"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/verses_title_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/haus_logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/menu_verses"
        android:textSize="30dp"
        android:textColor="@color/colorTextWhite"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/verses_haus_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verses_title_activity"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>